# =============================================================================
# Multi-Agent Ops Demo - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# -----------------------------------------------------------------------------
# LLM Configuration
# -----------------------------------------------------------------------------
# LLM_MODE: stub | openai | ollama
# - stub: Uses mock responses (no API key needed, for testing)
# - openai: Uses OpenAI API
# - ollama: Uses local Ollama server
LLM_MODE=stub

# OpenAI Configuration (required if LLM_MODE=openai)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# Ollama Configuration (required if LLM_MODE=ollama)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# -----------------------------------------------------------------------------
# Embedding Configuration
# -----------------------------------------------------------------------------
# EMBEDDING_MODE: stub | openai
# - stub: Uses random vectors (for testing)
# - openai: Uses OpenAI embeddings
EMBEDDING_MODE=stub

EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# -----------------------------------------------------------------------------
# Guardrails Configuration
# -----------------------------------------------------------------------------
# Human approval required before final output (recommended: false for safety)
AUTO_APPROVE=false

# Maximum steps per agent run (prevents infinite loops)
MAX_STEPS=20

# Maximum parallel agent executions
MAX_PARALLEL=3

# -----------------------------------------------------------------------------
# Observability Configuration
# -----------------------------------------------------------------------------
# Directory for run outputs
RUNS_DIR=runs

# Enable detailed trace logging
TRACE_ENABLED=true

# Log level: DEBUG | INFO | WARNING | ERROR
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# API Configuration
# -----------------------------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000

# -----------------------------------------------------------------------------
# PII Masking Patterns (regex patterns, comma-separated)
# -----------------------------------------------------------------------------
PII_PATTERNS=\b[A-Za-z0-9._%+-]+@[A-Za-z0-9.-]+\.[A-Z|a-z]{2,}\b,\b\d{3}-\d{4}-\d{4}\b,\b\d{4}-\d{4}-\d{4}-\d{4}\b
